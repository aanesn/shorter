{
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"trailingComma": "none",
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"tailwindStylesheet": "./src/routes/layout.css",
	"tailwindFunctions": ["cva", "cx"],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"<THIRD_PARTY_MODULES>",
		"^\\$lib/(.*)$",
		"^\\$app/(.*)$",
		"^[./]"
	],
	"importOrderTypeScriptVersion": "5.0.0"
}
